<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/topPanel"
    tools:context="com.teamrocket.infotracker.JobOptimization">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:background="#303f9f"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/third"
            android:layout_weight="2"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/forth"
                android:layout_weight="1"
                android:gravity="left|center"
                android:layout_gravity="right">




            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/rl1"
                android:adjustViewBounds="false"
                android:layout_gravity="right"
                android:contentDescription="@string/logo" />

        </LinearLayout>
    </LinearLayout>

    <TextView android:text="Choose a scheduling algorithm: " android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_below="@+id/second"
         />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="FCFS"
        android:background="#303f9f"
        android:textColor="#ffffff"
        android:id="@+id/button5"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SJF"
        android:layout_marginTop="15dp"
        android:background="#ffc107"
        android:textColor="#ffffff"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Total finish time"
        android:gravity="center"
        android:id="@+id/textView24"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#303f9f"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="8 jobs will be running."
        android:id="@+id/textView25"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
