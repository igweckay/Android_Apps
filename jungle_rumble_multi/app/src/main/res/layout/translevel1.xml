<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@drawable/trans_level_1"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/levelone_repeat"
        android:background="@drawable/contin_level1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:id="@+id/exit_tofrontscreen"
        android:background="@drawable/exit0"
        android:layout_below="@+id/levelone_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />
</RelativeLayout>